@using MyVanity.Web.Helpers.MvcHelpers
@model MyVanity.Model.DoctorModels.Impl.DoctorEditModel

@Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)
    @Html.EditorFor(model => model.Profile)
    
    <div class="form-group">
        @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Email, new { type = "email" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>
    </div>

    <div class="form-group">
        @Html.RequiredLabelFor(model => model.Description, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
    </div>
    <div class="form-group">
       @Html.HiddenFor(model => model.PicPath, new { id = "picture-path" })
        @Html.LabelFor(model => model.PicPath, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.ImageFor(model => model.PicPath, "imgContainer", null)
        </div>
        <div class="col-md-10 col-md-offset-2" style="margin-top: 5px;">
            <span class="btn btn-info btn-xs fileinput-button">
                <i class="glyphicon glyphicon-camera"></i>
                <span>Browse</span>
                <input type="file" name="file" data-url="/FileManaging/UploadImage" id="fileupload">
            </span>
            <span id="file-upload-error" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "DoctorsList")
</div>