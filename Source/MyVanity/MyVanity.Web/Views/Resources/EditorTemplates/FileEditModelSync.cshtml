
@using MyVanity.Web.MvcHelpers
@model MyVanity.Model.FileModels.Impl.FileEditModelSync
@Html.ValidationSummary(true)

@Html.HiddenFor(model => model.Path, new { id = "path" })
<div class="form-group">
    @Html.RequiredLabelFor(model => model.Name, new { @class = "control-label col-md-2" })
    @Html.HiddenFor(model => model.RealName, new { id = "real-name-field" })
    <div class="col-md-10">
        @Html.TextBoxFor(model => model.Name, new { id = "name-field-id" })
        @Html.ValidationMessageFor(model => model.Name)
    </div>
</div>

<div class="form-group">
    @Html.RequiredLabelFor(model => model.Description, new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.TextAreaFor(model => model.Description)
        @Html.ValidationMessageFor(model => model.Description)
    </div>
</div>

<div class="form-group">
    @Html.RequiredLabelFor(model => model.SelectedCategory, new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.GDropDownListFor(model => model.SelectedCategory, Model.Categories, "Name", "Id", new { id = "categories" }, false, true)
        @Html.ValidationMessageFor(model => model.SelectedCategory)
    </div>
</div>

<div class="form-group">
    @Html.RequiredLabelFor(model => model.SelectedSubcategory, new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        <select data-bind="options: subcategories, optionsText: 'name', value: currentSubcat"></select>
        @Html.ValidationMessageFor(model => model.SelectedSubcategory)
        @Html.HiddenFor(model => model.SelectedSubcategory, new { data_bind = "value: selectedSubcatId()" })
    </div>
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Save" class="btn btn-success" />
    </div>
</div>



