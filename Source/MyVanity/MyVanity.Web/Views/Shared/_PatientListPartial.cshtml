@using MyVanity.Web.MvcHelpers
@model MyVanity.Model.Pager.PagedViewModel<MyVanity.Model.PatientModels.Impl.PatientEditModel> 

@if (Model.Items.Any())
{
    <div class="table-responsive">
        <table class="table">
            
            <tr>
                <th> First Name </th>
                <th> Middle Name </th>
                <th> Last Name </th>
                <th> Id </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.Profile.FirstName)     
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Profile.MiddleName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Profile.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Id)
                    </td>
                    <td>
                        <a href="#" class="btn btn-primary btn-sm select-user" data-name="@string.Format("{0} {1}", item.Profile.FirstName, item.Profile.MiddleName)" data-id="@item.Id">Select</a>
                    </td>
                </tr>
            }
        </table>
    </div>
    
    @Html.Pager(Model, "Patient", "GetPatients")
}
else
{
    <h4>@Html.Raw("No Patients found")</h4>
}